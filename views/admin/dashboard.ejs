<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Admin Dashboard</title>
  <link rel="stylesheet" href="/styles/dashboard.css">
</head>
<body>
    <!-- Nav Bar -->
    <nav class="navbar">
        <a href="/admin/dashboard">Dashboard</a>
        <a href="/patient-records">Patient Records</a>
        <a href="/appointments">Appointments</a>
        <a href="/billings">Billings</a>
        <a href="/login"><button>Logout</button></a>
    </nav>

    <!-- Short cut -->
    <section class="shortcut-grid">
        <a href="/patient-records" class="shortcut-btn">Patient Records</a>
        <a href="/appointments" class="shortcut-btn">Appointments</a>
        <a href="/billings" class="shortcut-btn">Billings</a>
        <a href="#" class="shortcut-btn">Register Patient</a>
    </section>

    <!-- Upcoming Appointments -->
    <div class="appointments-section">
        <h3>Upcoming Appointments</h3>
      
        <% appointments.forEach(appointment => { %>
            <div class="appointment-card">
                <img src="<%= appointment.imageUrl %>" alt="Patient Image" />
                <div class="appointment-details">
                    <div class="appointment-title">
                        <%= appointment.patientName %> - <%= appointment.time %>
                    </div>
                    <div class="appointment-desc">
                        <%= appointment.doctorName %> &middot; <%= appointment.reason %>
                    </div>
                </div>
                <div class="appointment-actions">
                    <a href="/admin/appointments/<%= appointment.id %>">
                        <button>View</button>
                    </a> 
                </div>
            </div>
        <% }) %>
    </div>
      
</body>
</html>