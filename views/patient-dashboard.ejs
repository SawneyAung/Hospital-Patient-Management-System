<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Patient Dashboard</title>
  <link rel="stylesheet" href="styles.css" />
</head>
<body>

  <!-- Top Menu -->
  <div class="navbar">
    <button>Dashboard</button>
    <button>Patient Records</button>
    <button>Appointments</button>
    <button>Register Patient</button>
    <button>Medical History</button>
    <button>Billing</button>
    <button>Settings</button>
  </div>

  <!-- Main Content -->
  <div class="container">
    <h2>Patient Records</h2>
    <div class="patient-info">
      <img src="#" alt="Patient Icon" />
      <div class="patient-info-details">
        <strong>Patient Name</strong>
        <div>D.O.B</div>
        <div>Contact Number</div>
        <div>Address</div>
        <div>Medical ID</div>
        <button class="add-btn">Add Patient</button>
      </div>
    </div>

    <div class="registered-section">
      <h3>Registered Patients →</h3>

      <div class="registered-patient">
        <img src="#" alt="Patient 1" />
        <div class="registered-details">
          <strong>Patient 1</strong>
          <div>Description</div>
          <small>Today • Last Appointment</small>
        </div>
        <span class="arrow">▶</span>
      </div>

      <div class="registered-patient">
        <img src="#" alt="Patient 2" />
        <div class="registered-details">
          <strong>Patient 2</strong>
          <div>Description</div>
          <small>Today • Last Appointment</small>
        </div>
        <span class="arrow">▶</span>
      </div>

      <div class="registered-patient">
        <img src="#" alt="Patient 3" />
        <div class="registered-details">
          <strong>Patient 3</strong>
          <div>Description</div>
          <small>Today • Last Appointment</small>
        </div>
        <span class="arrow">▶</span>
      </div>
    </div>
  </div>

</body>
</html>